{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES6"
    ],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist/src"
  },
  "include": [
    "src/index.ts",
    "src/**/*.d.ts"
  ]
}